<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Spinner:
            id: language_spinner
            text: 'Pasirinkite kalbą'
            values: ['Lithuanian', 'English']
            size_hint_y: None
            height: 40
            on_text: root.set_language(self.text)

        Button:
            id: record_button
            text: "🎙️ Pradėti įrašymą"
            size_hint_y: None
            height: 50
            on_press: root.start_recording()

        TextInput:
            id: transcription
            size_hint_y: None
            height: 100
            readonly: True
            multiline: True

        Button:
            id: save_button
            text: "Išsaugoti"
            size_hint_y: None
            height: 40
            on_press: root.save_to_database()

        Button:
            id: cancel_button
            text: "Atšaukti"
            size_hint_y: None
            height: 40
            on_press: root.clear_text()

        ScrollView:
            size_hint_y: 0.4
            GridLayout:
                id: product_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                row_default_height: 40
                row_force_default: True

        Button:
            id: reports_button
            text: "📊 Ataskaitos"
            size_hint_y: None
            height: 40
            on_press: root.load_statistics()


<StatisticsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Spinner:
            id: spinner
            values: ['Visi', 'Diena', 'Savaitė', 'Mėnuo']
            size_hint_y: None
            height: 40
            on_text: root.set_filter(self.text)

        ScrollView:
            id: scroll_view
            size_hint_y: 0.8

            GridLayout:
                id: stats_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height

        Button:
            id: back_button
            text: "Grįžti atgal"
            size_hint_y: None
            height: 40
            on_press: root.manager.current = 'main'
